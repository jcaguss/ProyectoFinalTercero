{
  "info": {
    "name": "Draftosaurus API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Colección Postman para probar endpoints de autenticación, juego y recuperación."
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000" },
    { "key": "user_id", "value": "3" },
    { "key": "username", "value": "Agustin" },
    { "key": "email", "value": "agustin2@example.com" },
    { "key": "password", "value": "12341234" },
    { "key": "opponent_id", "value": "1" },
    { "key": "game_id", "value": "1" },
    { "key": "player_seat", "value": "0" },
    { "key": "dino_id", "value": "1" },
    { "key": "enclosure_id", "value": "1" },
    { "key": "slot_index", "value": "0" },
    { "key": "die_face", "value": "LEFT_SIDE" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register (opcional)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login (Agustin)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Game",
      "item": [
        {
          "name": "Start Game",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"player1_id\": {{opponent_id}},\n  \"player2_id\": {{user_id}}\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/game/start",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "game", "start"]
            }
          }
        },
        {
          "name": "Place Dinosaur",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"game_id\": {{game_id}},\n  \"player_seat\": {{player_seat}},\n  \"dino_id\": {{dino_id}},\n  \"enclosure_id\": {{enclosure_id}},\n  \"slot_index\": {{slot_index}}\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/game/place-dinosaur",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "game", "place-dinosaur"]
            }
          }
        },
        {
          "name": "Process Turn",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"game_id\": {{game_id}},\n  \"player_seat\": {{player_seat}},\n  \"dino_id\": {{dino_id}},\n  \"enclosure_id\": {{enclosure_id}},\n  \"slot_index\": {{slot_index}}\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/game/turn",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "game", "turn"]
            }
          }
        },
        {
          "name": "Roll Die",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"game_id\": {{game_id}},\n  \"affected_player_seat\": {{player_seat}},\n  \"die_face\": \"{{die_face}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/game/roll",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "game", "roll"]
            }
          }
        },
        {
          "name": "Valid Enclosures",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/game/enclosures/{{game_id}}/{{player_seat}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "game", "enclosures", "1", "0"]
            }
          }
        },
        {
          "name": "Game State",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/game/state/{{game_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "game", "state", "1"]
            }
          }
        },
        {
          "name": "In Progress by User (GameRoutes)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/game/inprogress/{{user_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "game", "inprogress", "1"]
            }
          }
        },
        {
          "name": "Opponents",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/game/opponents/{{user_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "game", "opponents", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Recovery",
      "item": [
        {
          "name": "Resume Game (user 3)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/game/resume/{{game_id}}?user_id={{user_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "game", "resume", "1"],
              "query": [{ "key": "user_id", "value": "{{user_id}}" }]
            }
          }
        },
        {
          "name": "In Progress by User (RecoveryRoutes)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/game/pending/{{user_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "game", "pending", "1"]
            }
          }
        },
        {
          "name": "Game History",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/recovery/{{game_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "recovery", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Current User",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/user/current",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "user", "current"]
            }
          }
        },
        {
          "name": "User Info",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/user/{{user_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "user", "1"]
            }
          }
        },
        {
          "name": "Available Opponents (UserRoutes)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/user/opponents/{{user_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "user", "opponents", "1"]
            }
          }
        }
      ]
    }
  ]
}
